<div class="container">
    @{
        int regionWidth = Model?.Regions[0].Width ?? 3;
        int regionHeight = Model?.Regions[0].Height ?? 3;
        for (int i = 0; i < regionWidth; i++)
        {
            <div class="row">
                @for (int j = 1; j <= regionHeight; j++)
                {
                <div class="col">
                    <button type="button" class="btn btn-secondary btn-lg btn-block">@(i * regionHeight + j)</button>
                </div>
                }
            </div>
        }
    }
    <hr/>
    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-secondary btn-lg btn-block">Notes</button>
        </div>
        <div class="col">
            <button type="button" class="btn btn-secondary btn-lg btn-block">Hint</button>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-secondary btn-lg btn-block">Undo</button>
        </div>
        <div class="col">
            <button type="button" class="btn btn-secondary btn-lg btn-block">Erase</button>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-success btn-lg btn-block" id="submit">Submit</button>
        </div>
    </div>
</div>