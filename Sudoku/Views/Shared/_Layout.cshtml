<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Sudoku</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/css/bootstrap.lumen.css"/>
        <link rel="stylesheet" href="~/lib/css/fontawesome.css"/>
        <link rel="stylesheet" href="~/css/site.css"/>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/css/bootstrap.lumen.min.css"/>
        <link rel="stylesheet" href="~/lib/css/fontawesome.min.css"/>
        <link rel="stylesheet" href="~/css/site.min.css"/>
    </environment>
</head>
<body>
<nav class="navbar sticky-top navbar-light bg-light justify-content-between">
    <div class="container">
        <a class="navbar-brand">Sudoku</a>
        <form class="form-inline" id="newSudoku">
            <div class="form-group">
                <select name="difficulty" class="form-control" id="difficulty" required>
                    <option value="" hidden>Difficulty</option>
                    <option>Easy</option>
                    <option>Medium</option>
                    <option>Hard</option>
                </select>
            </div>
            <div class="form-group">
                <select name="size" class="form-control" id="size" required>
                    <option value="" hidden>Size</option>
                    <option value="4" title="Four 2x2 regions">Shi Doku</option>
                    <option value="6" title="Six 2x3 regions">Roku Doku</option>
                    <option value="9" title="Classic 9x9 grid">Sudoku</option>
                    <option value="12" title="Twelve 3x4 regions">Maxi</option>
                    <option value="25" title="Twenty-five 5×5 regions">Sudoku the Giant</option>
                    <option value="100" title="One hundred 10×10 regions">Sudoku-zilla</option>
                    <option>Custom</option>
                </select>
            </div>
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-outline-primary">
                    <input type="radio" name="mode" value="generate" checked>Generate
                </label>
                <label class="btn btn-outline-primary active">
                    <input type="radio" name="mode" value="solve">Solve
                </label>
            </div>
            <button type="submit" class="btn btn-success">New Sudoku</button>
        </form>
    </div>
</nav>

<div class="container">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; 2020 - Ashley Rushworth</p>
    </footer>
</div>

<environment include="Development">
    <script src="~/lib/js/jquery.js"></script>
    <script src="~/lib/js/bootstrap.bundle.js"></script>
    <script src="~/lib/js/fontawesome.js"></script>
    <script src="~/js/site.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/lib/js/jquery.min.js"></script>
    <script src="~/lib/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/js/fontawesome.min.js"></script>
    <script src="~/js/site.min.js"></script>
</environment>

@RenderSection("Scripts", false)
</body>
</html>